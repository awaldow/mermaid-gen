<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net5.0</TargetFramework>
    <RootNamespace>mermaid_gen</RootNamespace>
  </PropertyGroup>
  <PropertyGroup>
    <PackAsTool>true</PackAsTool>
    <PackageId>mermaid-gen</PackageId>
    <ToolCommandName>mermaid-gen</ToolCommandName>
    <PackageOutputPath>./nupkg</PackageOutputPath>
    <PackageVersion>0.0.1</PackageVersion>
    <Authors>Addison Waldow</Authors>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/awaldow/mermaid-gen</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <Copyright>Copyright (c) Addison Waldow 2021</Copyright>
    <PackageTags>mermaid er class gen csharp ef core</PackageTags>
    <Description>A command line utility to consume an assembly with EF Core POCOs and generate ER or class diagrams.</Description>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\mermaid-gen.generators\mermaid-gen.generators.csproj" />
  </ItemGroup>
</Project>
