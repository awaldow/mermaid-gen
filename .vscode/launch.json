{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (file output)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/mermaid-gen/bin/Debug/net5.0/mermaid-gen.dll",
            "args": ["generate", "-a", "${workspaceFolder}/mermaid-gen.Tests/testAssets/Models.dll", "-t", "er", "-o", "${workspaceFolder}/mermaid-gen/bin/Debug/net5.0/mermaid.mmd"],
            "cwd": "${workspaceFolder}/mermaid-gen",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Launch (console output)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/mermaid-gen/bin/Debug/net5.0/mermaid-gen.dll",
            "args": ["generate", "-a", "${workspaceFolder}/mermaid-gen.Tests/testAssets/Models.dll", "-t", "er", "-o", "stdout"],
            "cwd": "${workspaceFolder}/mermaid-gen",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}